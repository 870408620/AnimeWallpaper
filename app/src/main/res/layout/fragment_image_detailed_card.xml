<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.github.miao1007.myapplication.ui.activity.DetailedActivity">


  <!--background-->


  <ImageView
      xmlns:android="http://schemas.android.com/apk/res/android"
      android:id="@+id/blur_bg"
      android:transitionName="iv_card_preview"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:scaleType="centerCrop"
      android:adjustViewBounds="true"/>

  <!--real layout-->
  <LinearLayout android:layout_width="match_parent"
      android:orientation="vertical"
      android:id="@+id/image_holder"
      android:background="#7f5a595b"
      android:layout_height="match_parent">
    <!--navigationbar 4x13 = 52-->

    <com.github.miao1007.myapplication.ui.widget.NavigationBar android:layout_width="match_parent"
        android:id="@+id/navigation_bar"
        android:layout_height="52dp">


    </com.github.miao1007.myapplication.ui.widget.NavigationBar>

    <ImageView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/iv_detailed_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"/>

  </LinearLayout>


</FrameLayout>
