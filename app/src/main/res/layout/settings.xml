<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


  <LinearLayout android:layout_width="match_parent"
      android:orientation="horizontal"
      android:layout_height="?attr/actionBarSize">
    <ImageView android:layout_width="48dp" android:layout_height="48dp"
        android:padding="8dp"
        android:scaleType="fitXY"
        android:src="@drawable/github_96"/>
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textSize="16sp"
        android:singleLine="true"
        android:ellipsize="end"
        android:text="https://github.com/miao1007"/>
  </LinearLayout>


  <LinearLayout android:layout_width="match_parent"
      android:orientation="horizontal"
      android:layout_height="?attr/actionBarSize"
      android:layout_marginTop="?attr/actionBarSize">
    <ImageView android:layout_width="48dp" android:layout_height="48dp"
        android:padding="8dp"
        android:scaleType="fitXY"
        android:src="@drawable/blog_96"/>
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textSize="16sp"
        android:singleLine="true"
        android:ellipsize="end"
        android:text="http://www.jianshu.com/users/b99b0edd4e77"/>
  </LinearLayout>


  <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
      android:layout_gravity="bottom|center_horizontal"
      android:gravity="center"
      android:textSize="16sp"
      android:layout_marginBottom="16dp"
      android:text="Version: "/>

</FrameLayout>