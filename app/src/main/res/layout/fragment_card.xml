<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent">

  <!--RecyclerView-->
  <android.support.v7.widget.RecyclerView
      android:id="@+id/rv_frag_card"
      android:clipChildren="false"
      app:layout_behavior="@string/appbar_scrolling_view_behavior"
      tools:listitem="@layout/list_item_sample"
      android:layout_width="match_parent"
      android:layout_height="match_parent"/>


  <com.github.miao1007.myapplication.ui.widget.NavigationBar android:layout_width="match_parent"
      android:id="@+id/navigation_bar"
      android:elevation="4dp"
      xmlns:android="http://schemas.android.com/apk/res/android"
      app:layout_scrollFlags="scroll|snap"
      android:layout_height="?attr/actionBarSize">


    <!--real icon size = ${?attr/actionBarSize} - 32 = 8dp-->

    <ImageView
        android:src="@drawable/search_64" android:layout_alignParentRight="true"
        android:padding="16dp"
        android:id="@+id/iv_card_search"
        android:scaleType="fitXY"
        android:layout_width="?attr/actionBarSize"
        android:layout_height="?attr/actionBarSize"/>
  </com.github.miao1007.myapplication.ui.widget.NavigationBar>

</FrameLayout>


