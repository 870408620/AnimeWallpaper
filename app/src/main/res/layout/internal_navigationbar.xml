<?xml version="1.0" encoding="utf-8"?>
<!--navigationbar 4x13 = 52-->
<merge
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="52dp">
               

  <!--Do not set padding on it, see {@code NavigationBar}-->
  <TextView android:layout_width="wrap_content"
      android:layout_height="match_parent"
      android:text="@string/app_name"
      android:id="@+id/internal_navi_title"
      android:maxLines="1"
      android:maxLength="10"
      android:gravity="center_vertical"
      android:textSize="24sp"
      android:layout_centerInParent="true"/>

  <!--make sure layout_height == full-->
  <ProgressBar
      android:id="@+id/internal_navi_progress"
      android:layout_width="20dp"
      android:visibility="visible"
      android:layout_toLeftOf="@id/internal_navi_title"
      android:layout_height="match_parent"
      android:layout_marginRight="4dp"
      android:layout_centerVertical="true"
      android:indeterminateDrawable="@drawable/progress_indicator"/>


</merge>