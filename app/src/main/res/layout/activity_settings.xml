<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

  <com.github.miao1007.animewallpaper.ui.widget.NavigationBar android:layout_width="match_parent"
      android:id="@+id/settings_ngbar"
      android:background="@drawable/gradient_bg"
      android:layout_height="?attr/actionBarSize">
    <LinearLayout android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="8dp"
        android:layout_height="match_parent">

      <ImageView
          android:layout_marginRight="8dp"
          android:src="@drawable/back_blue_96"
          android:layout_alignParentLeft="true"
          android:id="@+id/settings_back"
          android:background="?attr/selectableItemBackground"
          android:layout_gravity="center_vertical"
          android:layout_alignParentBottom="true"
          android:scaleType="fitXY"
          android:layout_width="20dp"
          android:layout_height="20dp"/>

      <com.github.miao1007.animewallpaper.ui.widget.FontedTextView
          android:layout_width="wrap_content"
          android:layout_height="?attr/actionBarSize"
          android:text="Home"
          android:layout_toRightOf="@id/settings_back"
          android:id="@+id/internal_navi_title"
          android:maxLines="1"
          android:ellipsize="end"
          android:layout_alignParentBottom="true"
          android:singleLine="true"
          android:textSize="20sp"
          android:gravity="center_vertical"
          android:layout_centerHorizontal="true"/>
    </LinearLayout>


  </com.github.miao1007.animewallpaper.ui.widget.NavigationBar>


  <FrameLayout
        android:id="@+id/include_settings_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


</LinearLayout>
