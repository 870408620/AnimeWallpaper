<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="342dp" xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:id="@+id/internal_actionsheet_bg"
    android:layout_width="match_parent">


  <!--280 + 8-->

  <RelativeLayout
      android:layout_marginLeft="8dp"
      android:layout_marginTop="8dp"
      android:layout_marginRight="8dp"
      android:orientation="vertical"
      android:background="@drawable/internal_actionsheet_radius_8"
      android:clickable="true"
      android:layout_width="match_parent"
      android:layout_height="280dp">

    <TextView android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="Searching for relevant tags"
        android:id="@+id/internal_actionsheet_title"
        android:maxLines="1"
        android:textColor="@color/ios_internal_blue"
        android:layout_alignParentTop="true"
        android:textSize="18sp"
        android:gravity="center_vertical"
        android:layout_centerHorizontal="true"/>


    <ListView android:layout_width="match_parent"
        tools:listitem="@android:layout/simple_list_item_1"
        android:divider="#b9b9b9"
        android:dividerHeight="1dp"
        android:id="@+id/internal_actionsheet_list"
        android:layout_height="match_parent" android:layout_below="@+id/internal_actionsheet_title"
        android:layout_centerHorizontal="true"/>

  </RelativeLayout>


  <!--48 + 8x2 = 54dp-->
  <TextView
      android:layout_margin="8dp"
      android:id="@+id/internal_sheet_cancel"
      android:visibility="visible"
      android:text="@android:string/cancel"
      android:layout_width="match_parent"
      android:layout_height="48dp"
      android:gravity="center"
      android:clickable="true"
      android:background="@drawable/internal_actionsheet_radius_8"
      android:textColor="@color/ios_internal_blue"
      android:textStyle="bold"
      android:textSize="18sp"/>

</LinearLayout>
