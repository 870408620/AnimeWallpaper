<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="?attr/colorPrimaryDark">


  <com.github.miao1007.myapplication.ui.widget.NavigationBar android:layout_width="match_parent"
      android:id="@+id/navigation_bar"
      android:layout_height="52dp">


  </com.github.miao1007.myapplication.ui.widget.NavigationBar>

  <!--framelayout-->
  <android.support.design.widget.CoordinatorLayout
      xmlns:android="http://schemas.android.com/apk/res/android"
      xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
      android:layout_height="match_parent">

    <!--RecyclerView-->
    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_frag_card"
        android:clipChildren="false"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <!--内部放可以自动滚动的线性布局，并添加flag-->
    <android.support.design.widget.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


      <!--search-->
      <!--当recycler上划/滚动时gudong消失-->
      <RelativeLayout
          xmlns:android="http://schemas.android.com/apk/res/android"
          android:layout_width="match_parent"
          android:elevation="4dp"
          android:id="@+id/internal_holder_search"
          app:layout_scrollFlags="scroll|enterAlways"
          android:layout_height="52dp">

        <TextView android:layout_width="wrap_content"
            android:textSize="16sp"
            android:visibility="gone"
            android:id="@+id/internal_tv_cancel"
            android:gravity="center_vertical"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true" android:text="@android:string/cancel"
            android:layout_height="match_parent" android:layout_margin="8dp"

        />

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:id="@+id/internal_rl_search"
            android:layout_toLeftOf="@id/internal_tv_cancel"
            android:layout_margin="8dp"
            android:layout_height="match_parent"
            android:background="@drawable/search_shape_bg">


          <!--未点击时，在中间；点击后消失-->
          <TextView android:layout_centerVertical="true" android:layout_width="wrap_content"
              android:id="@+id/internal_tv_search"
              android:layout_centerInParent="true"
              android:textSize="16sp"
              android:text="@android:string/search_go"
              android:textColor="#8e8e93"
              android:layout_height="wrap_content"/>

          <!--未点击时，在中间偏左；点击后layout_marginLeft = 8dp-->
          <ImageView android:layout_width="16dp" android:layout_height="16dp"
              android:layout_marginRight="2dp"
              android:layout_marginLeft="8dp"
              android:id="@+id/internal_iv_search"
              android:layout_centerVertical="true"
              android:src="@drawable/search_icon"
              android:layout_toLeftOf="@id/internal_tv_search"
          />

          <!--未点击时，无；输入字后，出现，-->
          <ImageView android:layout_alignParentRight="true"
              android:visibility="visible"
              android:layout_marginRight="8dp"
              android:id="@+id/internal_iv_clear"
              android:layout_width="14dp" android:layout_height="14dp"
              android:layout_centerVertical="true"
              android:src="@drawable/clear"/>


        </RelativeLayout>

      </RelativeLayout>


    </android.support.design.widget.AppBarLayout>


  </android.support.design.widget.CoordinatorLayout>

</LinearLayout>