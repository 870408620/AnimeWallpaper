<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.github.miao1007.myapplication.ui.activity.DetailedActivity"
>


  <!--background-->


  <ImageView
      xmlns:android="http://schemas.android.com/apk/res/android"
      android:id="@+id/blur_bg" android:transitionName="iv_card_preview"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:scaleType="centerCrop"
      android:adjustViewBounds="true"/>

  <!--real layout-->
  <LinearLayout android:layout_width="match_parent"
      android:orientation="vertical"
      android:id="@+id/image_holder"
      android:background="#a7aeaeae"
      android:layout_height="match_parent">
    <!--navigationbar 4x13 = 52-->

    <com.github.miao1007.myapplication.ui.widget.NavigationBar android:layout_width="match_parent"
        android:id="@+id/navigation_bar"
        android:background="?attr/selectableItemBackground"
        android:layout_height="?attr/actionBarSize">

      <!--48x48dp - 16 =fixXY=>  32x32 dp icon-->

      <ImageView
          android:src="@drawable/back_48"
          android:layout_alignParentLeft="true"
          android:id="@+id/detailed_back"
          android:background="?attr/selectableItemBackground"
          android:padding="16dp"
          android:layout_alignParentBottom="true"
          android:scaleType="fitXY"
          android:layout_width="?attr/actionBarSize"
          android:layout_height="?attr/actionBarSize"/>


      <ImageView
          android:src="@drawable/tag"
          android:layout_alignParentRight="true"
          android:id="@+id/detailed_tags"
          android:background="?attr/selectableItemBackground"
          android:padding="16dp"
          android:layout_alignParentBottom="true"
          android:scaleType="fitXY"
          android:layout_width="?attr/actionBarSize"
          android:layout_height="?attr/actionBarSize"/>


    </com.github.miao1007.myapplication.ui.widget.NavigationBar>

    <ImageView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/iv_detailed_card"
        android:background="@android:color/holo_red_dark"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        android:adjustViewBounds="true"/>


    <LinearLayout
        android:orientation="horizontal"
        android:layout_marginTop="24dp"
        android:id="@+id/ll_detailed_downloads"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


      <ImageView
          android:src="@drawable/wallpaper_96"
          android:layout_gravity="center_horizontal"
          android:layout_width="@dimen/detailed_iv_size"
          android:layout_height="@dimen/detailed_iv_size"
      />

      <ImageView
          android:src="@drawable/download_96"
          android:layout_gravity="center_horizontal"
          android:layout_width="@dimen/detailed_iv_size"
          android:layout_height="@dimen/detailed_iv_size"
      />

      <ImageView
          android:src="@drawable/share_96"
          android:layout_gravity="center_horizontal"
          android:layout_width="@dimen/detailed_iv_size"
          android:layout_height="@dimen/detailed_iv_size"
      />

    </LinearLayout>


  </LinearLayout>


</FrameLayout>
